<div id="titleDiv">
	User panel
</div>

<div id="snatcherDiv">
	<center>
		<p>LOGIN or SIGNUP</p>
	</center>
</div>



<!--If there is error we display it -->
<% if(typeof error != 'undefined') { %>
	<% if(error.length > 0) { %>
	  <div class="errmsg">
			<center>
			<%= error %></center>
		</div>
	<% } %>
<% } %>
<div id="pageTextContent">
	<center>
	<p style="width: 70%">Only logged in users have more advanced tools available.
		Guests can access only basic tools like Scraper and History of analyzes. To access
		all tools please login to your account or sign up if you don't have any!</p>
	<center>
</div>

<div>

</div>
<!--Login form -->
<div style="{justify-content: center;
align-items: center;
box-sizing: border-box;}">
<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Log In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
		<div class="login-form">
			<div class="sign-in-htm">
				<form action="/login" method="post">
				<div class="group">
					<label for="user" class="label">Username</label>
					<input id="user" type="text" class="input" name="username">
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
					<input id="pass" type="password" class="input" data-type="password" name="password">
				</div>
				<div class="group">
					<input id="check" type="checkbox" class="check" checked>
					<label for="check"><span class="icon"></span> Keep me Loged in</label>
				</div>
				<div class="group">

					<input type="submit" class="button" value="Log In">
				</div>
				<div class="hr"></div>
</form>
			</div>
			<div class="sign-up-htm">
				<form action="/signup" method="post">
				<div class="group">
					<label for="user" class="label">Username</label>
					<input id="user" type="text" class="input" name="username">
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
					<input id="pass" type="password" class="input" data-type="password" name="password">
				</div>


				<div class="group">
					<input type="submit" class="button" value="Sign Up">
				</div>

			</form>
			</div>
		</div>
	</div>
</div>
</div>


<hr class="newstyle" style="margin-top: 30px">
<div style="font-size: 20px; margin-top: 20px; margin-bottom: 20px">


</div>
